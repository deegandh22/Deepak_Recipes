<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN"
 "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Identifier</key>
    <string>com.github.deegandh22.pkg.BellSoftLibericaJDK21-AppleSilicon</string>
    <key>Description</key>
    <string>Downloads BellSoft Liberica JDK 21 PKG for macOS ARM64, unpacks payload, repacks, and copies to user folder.</string>
    <key>MinimumVersion</key>
    <string>2.3</string>
    <key>Input</key>
    <dict>
        <key>NAME</key>
        <string>BellSoft Liberica JDK 21</string>
        <key>DOWNLOAD_URL</key>
        <string>https://download.bell-sw.com/java/21.0.8+12/bellsoft-jdk21.0.8+12-macos-aarch64.pkg</string>
        <key>FINAL_PKG_DESTINATION</key>
        <string>/Users/username/Downloads/BellSoftLibericaJDK21-AppleSilicon.pkg</string>
    </dict>
    <key>Process</key>
    <array>
        <!-- Step 1: Download the PKG -->
        <dict>
            <key>Processor</key>
            <string>URLDownloader</string>
            <key>Arguments</key>
            <dict>
                <key>url</key>
                <string>%DOWNLOAD_URL%</string>
            </dict>
        </dict>
        <!-- Step 2: Unpack the PKG payload -->
        <dict>
            <key>Processor</key>
            <string>PkgPayloadUnpacker</string>
            <key>Arguments</key>
            <dict>
                <key>pkg_path</key>
                <string>%RECIPE_CACHE_DIR%/bellsoft-jdk21.0.8+12-macos-aarch64.pkg</string>
                <key>pkg_payload_path</key>
                <string>%RECIPE_CACHE_DIR%/bellsoft-jdk21.0.8+12-macos-aarch64.pkg/Payload</string>
                <key>destination_path</key>
                <string>%RECIPE_CACHE_DIR%/payload_root</string>
            </dict>
        </dict>
        <!-- Step 3: Repackage into deployable PKG -->
        <dict>
            <key>Processor</key>
            <string>PkgCreator</string>
            <key>Arguments</key>
            <dict>
                <key>pkgroot</key>
                <string>%RECIPE_CACHE_DIR%/payload_root</string>
                <key>output_package</key>
                <string>%RECIPE_CACHE_DIR%/BellSoftLibericaJDK21-AppleSilicon.pkg</string>
                <key>identifier</key>
                <string>com.github.deegandh22.pkg.BellSoftLibericaJDK21-AppleSilicon</string>
                <key>version</key>
                <string>21.0.8+12</string>
                <key>install_location</key>
                <string>/Library/Java/JavaVirtualMachines/</string>
                <key>pkg_request</key>
                <dict>
                    <key>scripts</key>
                    <dict/>
                    <key>package</key>
                    <dict>
                        <key>scripts</key>
                        <dict/>
                        <key>version</key>
                        <string>21.0.8+12</string>
                        <key>identifier</key>
                        <string>com.github.deegandh22.pkg.BellSoftLibericaJDK21-AppleSilicon</string>
                    </dict>
                </dict>
            </dict>
        </dict>
        <!-- Step 4: Move the final PKG outside AutoPkg cache -->
        dict>
    <key>Processor</key>
    <string>FileMover</string>
    <key>Arguments</key>
    <dict>
        <key>source</key>
        <string>%RECIPE_CACHE_DIR%/BellSoftLibericaJDK21-AppleSilicon.pkg</string>
        <key>destination_path</key>
        <string>%FINAL_PKG_DESTINATION%</string>
    </dict>
</dict>
    </array>
</dict>
</plist>

<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN"
 "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Identifier</key>
    <string>com.github.yourname.pkg.BellSoftLibericaJDK17-AppleSilicon</string>
    <key>Description</key>
    <string>Downloads the BellSoft Liberica JDK 17 DMG for Mac Apple Silicon and builds a macOS installer package (.pkg).</string>
    <key>MinimumVersion</key>
    <string>2.3</string>
    <key>Input</key>
    <dict>
        <key>NAME</key>
        <string>BellSoft Liberica JDK 17</string>
        <key>DOWNLOAD_URL</key>
        <string>https://download.bell-sw.com/java/17.0.13+8/bellsoft-jdk17.0.13+8-macos-aarch64.pkg</string>
    </dict>
    <key>Process</key>
    <array>
        <!-- 1️⃣ Download the PKG -->
        <dict>
            <key>Processor</key>
            <string>URLDownloader</string>
            <key>Arguments</key>
            <dict>
                <key>url</key>
                <string>%DOWNLOAD_URL%</string>
            </dict>
        </dict>
        <!-- 2️⃣ (Optional) Extract version if using DMG, skipped here because PKG version is known -->
        <!-- 3️⃣ Install the PKG -->
        <dict>
            <key>Processor</key>
            <string>PkgNetInstaller</string>
            <key>Arguments</key>
            <dict>
                <key>pkg_path</key>
                <string>%RECIPE_CACHE_DIR%/bellsoft-jdk17.0.13+8-macos-aarch64.pkg</string>
            </dict>
        </dict>
    </array>
</dict>
</plist>

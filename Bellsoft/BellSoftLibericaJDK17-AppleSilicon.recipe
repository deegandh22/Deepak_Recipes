<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN"
 "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Identifier</key>
    <string>com.github.deegandh22.pkg.BellSoftLibericaJDK21-AppleSilicon</string>
    <key>Description</key>
    <string>Downloads BellSoft Liberica JDK 21 DMG for macOS ARM64 and packages it into a deployable PKG.</string>
    <key>MinimumVersion</key>
    <string>2.3</string>
    <key>Input</key>
    <dict>
        <key>NAME</key>
        <string>BellSoft Liberica JDK 21</string>
        <key>DOWNLOAD_URL</key>
        <string>https://download.bell-sw.com/java/21.0.8+12/bellsoft-jdk21.0.8+12-macos-aarch64.dmg</string>
    </dict>
    <key>Process</key>
    <array>
        <!-- 1. Download DMG -->
        <dict>
            <key>Processor</key>
            <string>URLDownloader</string>
            <key>Arguments</key>
            <dict>
                <key>url</key>
                <string>%DOWNLOAD_URL%</string>
            </dict>
        </dict>
        <!-- 2. Extract Version -->
        <dict>
            <key>Processor</key>
            <string>AppDmgVersioner</string>
            <key>Arguments</key>
            <dict>
                <key>dmg_path</key>
                <string>%downloaded_path%</string>
            </dict>
        </dict>
        <!-- 3. Package app into installer PKG -->
        <dict>
            <key>Processor</key>
            <string>AppPkgCreator</string>
        </dict>
    </array>
</dict>
</plist>
